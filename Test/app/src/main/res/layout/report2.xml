<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0E0E6"
    >

    <TextView
        android:id="@+id/textView1"
        android:text="年"
        android:textSize="25dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/YearSpinner"
        android:layout_toRightOf="@+id/YearSpinner"
        android:layout_toEndOf="@+id/YearSpinner" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="月"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/MonthSpinner"
        android:layout_toRightOf="@+id/MonthSpinner"
        android:layout_toEndOf="@+id/MonthSpinner" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="日"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/DaySpinner"
        android:layout_toRightOf="@+id/DaySpinner"
        android:layout_toEndOf="@+id/DaySpinner" />

    <Spinner
        android:id="@+id/YearSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="79dp" />

    <Spinner
        android:id="@+id/MonthSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />

    <Spinner
        android:id="@+id/DaySpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/tabletitle"
        android:layout_width="1300dp"
        android:layout_height="wrap_content"
        android:text="  年月日     公司     本日    實際累計         目標          達成率    去年同期    成長率"
        android:textSize="35dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_above="@+id/scrollView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#DDDDDD"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.86"
                android:text="TextView"
                android:textSize="35dp"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>